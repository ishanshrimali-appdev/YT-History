<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Track</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Date</th>
      <th>Time</th>
      <th>Weather</th>
      <th>Temperature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= if event.track != nil
                  (event.track.title)
                end        
        %></td>
        <td><%= if event.track.artists[0] != nil
                  (event.track.artists[0].name)
                end
        %></td>
        <td><%= if event.track.album != nil
                  (event.track.album.title)
                end
        %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= event.weather %></td>
        <td><%= event.temperature %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

<%= form_with(model: @event) do |form| %>
  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
